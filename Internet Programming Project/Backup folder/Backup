document.getElementById('register-btn').addEventListener('click', (e) => {
    e.preventDefault()
    let name = document.getElementById('reg-name-txt').value
    let pass = document.getElementById('reg-password-input').value
    localStorage.setItem(name, pass)
})
document.getElementById('login-btn').addEventListener('click', (e) => {
    e.preventDefault()
    let name = document.getElementById('log-name-input').value
    let pass = document.getElementById('log-password-input').value
    if(localStorage.getItem(name) === pass) alert("login success")
    else alert('login failed!')
})
